<Window x:Class="BMI_Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BMI_Calculator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Background="#FF336699">
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Margin="200,0,0,0">
            <Label Content="Enter Height Metric Units:" FontWeight="Bold"/>
            <TextBox x:Name="Height" Width="200" Margin="0 5" FontWeight="Bold"/>
            <Label Content="Enter Weight:" FontWeight="Bold"/>
            <TextBox x:Name="Weight" Width="200" Margin="0 5" FontWeight="Bold"/>
            <Button Content="Calculate" Width="100" Margin="0 10" FontWeight="Bold" Click="Calculate_Click"/>
        </StackPanel>
        <Image x:Name="Cloud1" Source="/BMI Calculator;component\BMI.png" HorizontalAlignment="Left" Height="316" Margin="433,105,0,0" VerticalAlignment="Top" Width="322"/>
    </Grid>
</Window>
